require "securerandom"


p insert = "0x" << SecureRandom.hex(2)
p orig = "0x" << SecureRandom.hex(2)

File.open("hello.c", "w") do |file|
   file << "
   #include<stdio.h>

   int main(){
   
   int res = #{insert}|(#{orig}<<4);
   
   printf(\"Result = %#0x\",res);

   return 0;
   }
   "
end


hello = system("gcc hello.c && ./a.out > output.txt")

print("\n")

system("rm hello.c a.out")
